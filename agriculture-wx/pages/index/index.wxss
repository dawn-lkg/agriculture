/**index.wxss**/
page{
  background-color: #f5f9fa;
}
.index_swiper{

}
.index_swiper swiper{
  width: 750rpx;
  height: 375rpx;
}
.index_swiper swiper swiper-item navigator image{
  width: 100%;
}
.type_row{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}
.type_row navigator{
  width: 25%;
  padding: 25rpx;
  background-color: #fff;
  display: flex;
  box-sizing: border-box;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.type_row navigator image{
  width: 55%;
  height: 75rpx;
}
.type_row navigator text{
  font-size: 25rpx;
}
.index_hotProduct{
  margin-top: 20rpx;
}
.product_title{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  color: #fff;
  background-color: var(--themeColor);
}
.product_list{
  display: flex;
  flex-wrap: wrap;
}
.product_detail{
  margin: 15rpx;
  width: 46%;
  background-color: #fff;
  border-radius: 20rpx;
}
.product_detail image{
  width: 100%;
  border-radius:20rpx 20rpx 0 0 ;
}
.product_name{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}