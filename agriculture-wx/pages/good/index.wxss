/* pages/good/index.wxss */
page{
  background-color: #fff;
}
.product_detail{
  
}
.good_image{
  width:100%;
}
.price{
  padding: 15rpx;
  font-weight: 600;
  font-size: 50rpx;
  color: var(--fontColor);
}
.title{
  font-size: 35rpx;
  padding: 40rpx 15rpx; 
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.good_bottom{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  padding: 16rpx;
  border-top: 1px solid #ccc;
}
.good_bottom_content{
   padding: 0rpx;
}
.good_bootom_icon,.btn{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.icon{
  display: flex;
  flex-direction: column;
  padding: 0rpx 20rpx;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}
.btn{
  width: 60%;
}
.btn button{
  font-size: 22rpx;
  height: 60rpx;
}
.btn button:nth-child(1){
  background-image: linear-gradient(90deg,#fdcf00,#fd9b00);
  color: #fff;
  border-bottom-left-radius: 50rpx;
  border-top-left-radius: 50rpx;
  border-bottom-right-radius: 0;
  border-top-right-radius: 0;
}
.btn button:nth-child(2){
  background: #ff7407;
  color: #fff;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
  border-bottom-right-radius: 50rpx;
  border-top-right-radius: 50rpx;
}
.description{ 
  font-size: 43rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
}
.description_title{
  width: 100%;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
}