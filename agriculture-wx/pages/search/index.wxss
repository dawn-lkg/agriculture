page {
  background-color: #f2f2f2;
}

.search_container {
  background-color: #fff;
  height: 80rpx;
}
.container {}

.search {
  margin-top: 20rpx;
}
.filter_warp{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
}
.filter_item{
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.good {
  width: 342rpx;
  height: 500rpx;
  background: #fff;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.good_list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

#image {
  width: 340rpx;
  height: 340rpx;
}

#image image {
  width: 100%;
  height: 100%;
}

.good_body {
  display: flex;
  padding: 16rpx 24rpx 18rpx;
  flex-direction: column;
  flex: 1 1 auto;
}

.good_title {
  display: -webkit-box;
  height: 72rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  font-size: 28rpx;
  color: #333;
}
.good_down{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.good_cart{
  margin-right: 20rpx;
}
.filter_item_arrow{
  display: flex;
  flex-direction: column;
}
.pupop-content{
  width: 600rpx;
  height: 100%;
  border-radius: 20rpx 0 0 20rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  overflow: hidden;
}
.pupop-content-input{
  display: flex;
  flex-direction: row;
  padding: 20rpx 10rpx;
  align-items: center;
}
.pupop-content-input input{
  background-color: #f5f5f5;
  padding: 7rpx 15rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 25rpx;
}
.pupop-content-button{
  border-top: 1px solid #e5e5e5;
  position: fixed;
  bottom: 30rpx;
  display: flex;
  width: 540rpx;
}
.pupop-content-button view{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  width: 100%;
  border: 1px solid #fa4126;
  height: 80rpx;
  font-weight: 500;
}
.btn-confirm{
  color: #fff;
  background: #fa4126;
  border-radius: 0 84rpx 84rpx 0;
    border: 1rpx solid #fa4126;
}
.btn-reset{
  color: #fa4126;
    background: rgba(255, 255, 255, 1);
    position: relative;
    border: 1rpx solid #fa4126;
    border-radius: 84rpx 0 0 84rpx;
}
