/* pages/category/index.wxss */
page {
  height: 100%;
  background-color: #eeeeee;
}

.category_container {
  display: flex;
  flex-direction: row;
  height: 100%;
}

.left_menu {
  width: 28%;
  height: 100%;
  background-color: #fff;
  font-size: 30rpx;
}

.left_menu view {
  padding: 20px;
  text-align: center;
}

.good {
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  padding: 15rpx 10rpx 10rpx 10rpx;
}

.good image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.active {
  background-color: var(--themeColor);
  color: #fff;
}

.right_menu {
  width: 70%;
}

.content {
  width: 100%;
  padding: 0 0 0 20rpx;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 72rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.price{
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin-top: 70rpx;
}
.icon{
  margin-right: 10rpx;
}