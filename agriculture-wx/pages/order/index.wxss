/* pages/order/index.wxss */
page{
  background: #f5f5f5;
}
.l-segment{
  background-color: #fff;
}
.empty{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}
.list{
  display: flex;
  flex-direction: column;
}
.item{
  width: 100%;
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx 0;
  border-radius: 20rpx;
}
.item_head{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.item_head_id{
  color: #666666;
}
.item_head_status{
  color: #fa452b;
  font-weight: 500;
}
.section{
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
}
.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-word;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
   overflow: hidden;
}
.image image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 30rpx;
}
.section_content_left{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 600rpx;
}
.price{
  margin-bottom: 20rpx;
}
.num{
  text-align: right;
  color: #b5b5b5;
}
.footer{
  display: flex;
  flex-direction: column;
}
.footer .total{
  text-align: right;
  margin: 20rpx 0;
}
.footer .btn{
  text-align: right;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.btn_cacel{
  width: 180rpx;
  border: 1px solid#dcdcdc;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  height: 65rpx;
  margin:0 10rpx;
}
.btn_confirm{
  width: 180rpx;
  color: #fff;
  background: #fa452b;
  border-radius: 40rpx;
  height: 65rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin:0 10rpx;
}