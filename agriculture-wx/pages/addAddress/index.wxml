<!--pages/addAddress/index.wxml-->
<scroll-view class="container">
  <view>
    <l-input l-label-class="label"	 label="联系人："  placeholder="请输入收货人的姓名" bind:lininput="setName" value="{{name}}"></l-input>
  </view>
  <view>
    <l-input label="手机号：" l-label-class="label" bind:lininput="setPhone" placeholder="请输入收货人手机号码" value="{{phone}}"></l-input>
  </view>
  <view>
    <l-input label="收货地址：" l-label-class="label"  bind:lininput="setAddress" placeholder="请输入收货地址" value="{{address}}"></l-input>
  </view>
  <view class="save">
  <view class="save_button" bindtap="addAddress">
    保存地址
  </view>
  </view>
</scroll-view>
